<section id="certificates" class="container py-5">
    <h2 class="text-center mb-4">Certificates & Achievements</h2>
    <div class="row g-4">
        <% certificates.forEach(cert => { %>
            <div class="col-md-4">
                <div class="card shadow-lg h-100 border-0">
                    
                    <img src="<%= cert.image_url.replace('github.com', 'raw.githubusercontent.com').replace('/blob/', '/') %>" 
                    class="card-img-top project-img" 
                    alt="<%= cert.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= cert.title %></h5>
                        <p class="card-text"><%= cert.description %></p>
                        <a href="<%= cert.certificate_link %>" class="btn btn-primary" target="_blank">View Certificate</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>
