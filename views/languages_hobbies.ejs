<section id="about-more" class="container py-5">
    <h2 class="text-center mb-4">More About Me</h2>

    <h3 class="text-center">Languages I Speak</h3>
    <ul class="list-group text-center">
        <% languages.forEach(lang => { %>
            <li class="list-group-item"><i class="bi bi-translate"></i> <%= lang.language_name %></li>
        <% }) %>
    </ul>

    <h3 class="text-center mt-4">Hobbies & Interests</h3>
    <ul class="list-group text-center">
        <% hobbies.forEach(hobby => { %>
            <li class="list-group-item"><i class="bi bi-heart"></i> <%= hobby.hobby_name %></li>
        <% }) %>
    </ul>
</section>
